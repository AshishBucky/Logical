package com.ak.arrays;

public class TwoSum {

	public static void main(String[] args) {
		
	}
	public static int[] findTwoSum(int[] arr,int sum) {
		for(int i=0;i<arr.length;i++) {
			for(int j=0;j<arr.length;j++) {
				if(arr[i]+arr[j]==sum) {
					return new int[] {j,i};
				}
				else
					return new int[] {0,0};
			}
		}
	}

}
